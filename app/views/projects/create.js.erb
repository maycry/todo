$(".project-item:first").remove()
$(".projects-list").prepend('<%= j render("project", project: @project)%>')
$(".project-item:first .create-task-name input").focus()

$('.projects-list .project-item:first ul').sortable({
    placeholder: "ui-state-highlight",
    axis: "y",
    update: function( event, ui ) {
      $.post($(this).data('update-url'), $(this).sortable('serialize'))
    }
  });