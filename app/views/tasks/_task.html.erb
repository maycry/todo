<li class="task_<%= task.id %> <%= 'complete' if !task_status?(task.status)%>">
  <%= check_box_tag "task_#{task.id}", 1, !task_status?(task.status), data: { remote: true, url: url_for(controller: :tasks, action: :toggle_status, id: task.id), method: :post} %>
  <%= task.name %>
  <%= link_to "Edit T", edit_task_path(task), remote: true %>
  <%= link_to "x", task, method: :delete, remote: true %>
</li>
