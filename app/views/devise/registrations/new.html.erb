<div class="wrapper">
<h2>My todo app</h2>
<nav class="auth-links">
  <ul>
    <li>
      <%= link_to_unless_current "Log in", new_session_path(resource_name) %>
    </li>
    <li>
      <%= link_to_unless_current "Sign up", new_registration_path(resource_name) %>
    </li>
  </ul>
</nav>
<div class="log-in-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div>
  <%= f.email_field :email, autofocus: true, placeholder: "Choose e-mail" %></div>

  <div>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Choose password" %></div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %></div>
  <div><%= f.submit "Sign up" %></div>
<% end %>
</div>
</div>

